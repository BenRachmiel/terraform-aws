global
    log /dev/log local0
    maxconn 4096

defaults
    log     global
    mode    tcp
    option  tcplog
    timeout connect 10s
    timeout client  300s
    timeout server  300s

frontend https_in
    bind *:443
    default_backend k8s_https

frontend http_in
    bind *:80
    default_backend k8s_http

backend k8s_https
    server node1 {{ wg_config["node1_ip"] }}:{{ gateway_nodeport_https }} check
    server node2 {{ wg_config["node2_ip"] }}:{{ gateway_nodeport_https }} check
    server node3 {{ wg_config["node3_ip"] }}:{{ gateway_nodeport_https }} check

backend k8s_http
    server node1 {{ wg_config["node1_ip"] }}:{{ gateway_nodeport_http }} check
    server node2 {{ wg_config["node2_ip"] }}:{{ gateway_nodeport_http }} check
    server node3 {{ wg_config["node3_ip"] }}:{{ gateway_nodeport_http }} check
